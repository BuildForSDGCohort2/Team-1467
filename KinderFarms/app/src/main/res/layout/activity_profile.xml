<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/profile_visit_user_image"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/profile_visit_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_visit_user_image"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:text="Display User Name"
        android:textSize="22sp"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:id="@+id/profile_visit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_visit_user_name"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:text="Display User Status"
        android:textSize="18sp"
        android:textColor="@android:color/background_light"
        android:gravity="center"/>

    <Button
        android:id="@+id/profile_visit_send_req_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="65dp"
        android:background="@color/colorPrimary"
        android:text="Send Friend Request"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />

    <Button
        android:id="@+id/profile_decline_friend_req_btn"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimary"
        android:text="Decline Friend Request"
        android:textColor="@android:color/background_light"
        android:textSize="16sp" />


</RelativeLayout>